.comment{:id => "comment_#{comment.id}"}
  .author=h comment.author
  .comment= comment.rendered_content
  - if authorized?
    .admin
      = link 'Edit', :to => slice_url(:edit_post_comment, :post_id => @post.slug, :id => comment.id)
      = link 'Delete', :to => slice_url(:post_comment, :post_id => @post.slug, :id => comment.id), :method => "delete", :confirm => "Are you sure?"
    